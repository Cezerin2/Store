  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch ðŸ¦Š against localhost",
      "url": "http://localhost:3000", // or whatever port you use
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${workspaceRoot}/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch chrome against localhost",
      "url": "http://localhost:3000", // or whatever port you use
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "sourceMapPathOverrides": {
        "webpack:///*": "${workspaceRoot}/*"
      },
      "skipFiles": ["node_modules/**/*.js"]
    }
  ]
}
